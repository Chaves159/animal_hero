<%= form_tag(animals_path, method: 'get') do %>
  <div class="row">
    <%= label_tag "Nome do Animal: "%>
    <%= text_field_tag :nome%>
    <%= label_tag "Situação: "%>
    <%= select_tag :situacao, options_for_select(['Abandono', 'Propriedade']),  {include_blank:"Selecione..."}%>
    <%= button_tag(value: "commit", type: 'submit', class: "btn btn-primary") do%>
      buscar
    <%end %>
  </div>
<%end %>

<%- model_class = Animal -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Animais" %>
  </h1>
</div>

<table class="table table-hover">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:nome) %></th>
    <th><%= model_class.human_attribute_name(:raça) %></th>
    <th><%= model_class.human_attribute_name(:especie) %></th>
    <th><%= model_class.human_attribute_name(:sexo) %></th>
    <th><%= model_class.human_attribute_name(:peso) %></th>
    <th><%= model_class.human_attribute_name(:Data_de_Nascimento) %></th>
    <th><%= model_class.human_attribute_name(:situação) %></th>
    <th><%= model_class.human_attribute_name(:Ong) %></th>
    <th style="width: 170px" ><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @animals.each do |animals| %>
    <tr>
      <td><%= link_to animals.id, animal_path(animals) %></td>
      <td><%= animals.nome %></td>
      <td><%= animals.raca %></td>
      <td><%= animals.especie %></td>
      <td><%= animals.sexo %></td>
      <td><%= animals.peso %></td>
      <td><%= animals.data_nascimento %></td>
      <td><%= animals.situacao%></td>
      <td><%= animals.ong.nome%></td>


      <td>
        <%= link_to content_tag(:i,'Mostrar'),
                    animal_path(animals), :class => 'btn btn-success btn-xs' %>
        <%= link_to content_tag(:i,'Editar', class: ["fas", "fa-edit"]),
                    edit_animal_path(animals), :class => 'btn btn-primary btn-xs' %>
        <%= link_to content_tag(:i,'Excluir', class: ["fas", "fa-trash"]),
                    animal_path(animals),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.Novo Cadastro")),
            new_animal_path,
            :class => 'btn btn-primary' %>