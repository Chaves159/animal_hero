<p id="notice"><%= notice %></p>
<%= form_tag(animals_path, method: 'get')do %>
  <div class = "form">
    <div class="form">
      <%= label_tag :Buscar_Animal %>
      <%= text_field_tag :nome%>
      <%= label_tag "Situação" %>
      <%=select_tag :situacao,options_for_select(['Abandono', 'Propriedade']), include_blank: true,multiple: false,
                    "data-live-search" => "true", "data-selected-text-format" => "count", "data-actions-box" => "true"
      %>
      <%=button_tag(value: "commit", type: 'submit',class: "btn btn-primary") do %>
        Pesquisar
      <%end %>
    </div>
  </div>


<%end %>
<h1>Animais</h1>
<%- model_class = Animal -%>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%=model_class.human_attribute_name(:nome) %></th>
    <th><%=model_class.human_attribute_name(:raca) %></th>
    <th><%=model_class.human_attribute_name(:especie) %></th>
    <th><%=model_class.human_attribute_name(:sexo)%></th>
    <th><%=model_class.human_attribute_name(:peso) %></th>
    <th><%=model_class.human_attribute_name(:data_nascimento)%></th>
    <th><%=model_class.human_attribute_name(:situacao) %></th>
    <th><%=model_class.human_attribute_name(:ong) %></th>
    <th style="width: 170px" ><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>

  <tbody>
  <% @animals.each do |animal| %>
    <tr>
      <td><%= animal.nome %></td>
      <td><%= animal.raca %></td>
      <td><%= animal.especie %></td>
      <td><%= animal.sexo %></td>
      <td><%= animal.peso %></td>
      <td><%= animal.data_nascimento %></td>
      <td><%= animal.situacao %></td>
      <td><%= animal.ong.nome%></td>
      <td>
        <%= link_to content_tag(:i,'Mostrar'),
                    animal_path(animal), :class => 'btn btn-success btn-xs' %>
        <%= link_to content_tag(:i,'Editar', class: ["fas", "fa-edit"]),
                    edit_animal_path(animal), :class => 'btn btn-primary btn-xs' %>

        <%= link_to content_tag(:i,'Excluir', class: ["fas", "fa-trash"]),
                    animal_path(animal),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) },
                    :class => 'btn btn-xs btn-danger' %>



      </td>
    </tr>

  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Animal', new_animal_path, class:"btn btn-primary" %>